import secrets
import string

def generate_password(length):
    all_chars = string.ascii_letters + string.digits + "!@#$%^&*()-_=+[]{};:,.<>?/"
    return ''.join(secrets.choice(all_chars) for _ in range(length))

while True:
    try:
        length = int(input("Введіть довжину пароля (від 4 до 50): "))
        if 4 <= length <= 50:
            break
        else:
            print("Довжина повинна бути від 4 до 50 символів. Спробуйте ще раз.")
    except ValueError:
        print("Введіть число, а не текст.")

password = generate_password(length)
print("Ваш пароль:", password)
